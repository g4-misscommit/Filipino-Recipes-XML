<recipes>
  <recipe id="1">
    <title>Adobo</title>
    <category>Lunch</category>
    <prepTime>45 mins</prepTime>
    <ingredients>
      <item>Pork</item>
      <item>Soy Sauce</item>
      <item>Vinegar</item>
    </ingredients>
  <instructions>
    <step>Marinate pork in soy sauce and vinegar for 30 minutes.</step>
    <step>Heat oil in a pan and fry pork until browned.</step>
    <step>Add marinade and simmer until pork is tender.</step>
  </instructions>
